<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/living_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textSize="@dimen/size_14"
            android:textColor="@color/text_title_gray"
            android:text="@string/version_update" />

        <TextView
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title"
            android:background="@color/line" />

        <TextView
            android:id="@+id/title_content"
            android:layout_below="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
             android:textSize="@dimen/size_12"
             android:textColor="@color/text_title_gray"
            android:text="当前有新版本水水水水水水水水飒飒确定撒大声地啊" />
 <TextView
            android:id="@+id/line1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title"
            android:background="@color/line" />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/stand_bt_gray"
                android:text="@string/cancel_update"
                      android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/text_title_gray"
                android:textSize="@dimen/size_14" />

            <Button
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_gravity="center|bottom"
                android:background="@drawable/stand_bt_blue"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="确定更新"
                android:textColor="@android:color/white"
                android:textSize="@dimen/size_14" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>