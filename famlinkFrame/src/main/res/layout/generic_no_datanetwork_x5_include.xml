<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/no_comment_data"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:visibility="gone"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/loading_no_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="@string/layout_no_data"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_14" />

    <TextView
        android:id="@+id/textContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/generic_no_data_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/no_data_refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/gereric_no_data_bg"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="5dp"
        android:text="@string/generic_no_data_content"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size_12"
        android:visibility="invisible" />
</LinearLayout>



